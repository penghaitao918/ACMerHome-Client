<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_margin="12dp"
            android:textColor="@color/blue0"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login_backButton"
            android:onClick="loginOnClick"
            android:padding="15dp"
            android:background="@null"
            android:src="@drawable/btn_login_back"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_margin="35dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <EditText
                android:id="@+id/login_accountEdit"
                android:hint="@string/accountHint"
                android:textSize="22dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:drawablePadding="12dp"
                android:inputType="textAutoComplete"
                android:textColor="@color/gray"
                android:textColorHint="@color/text_hint"
                android:drawableLeft="@drawable/icon_account"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_login_login"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:id="@+id/login_passwardEdit"
                android:hint="@string/passwordHint"
                android:textSize="22dp"
                android:paddingTop="10dp"
                android:paddingLeft="20dp"
                android:paddingBottom="10dp"
                android:drawablePadding="12dp"
                android:inputType="textPassword"
                android:textColor="@color/gray"
                android:textColorHint="@color/text_hint"
                android:drawableLeft="@drawable/icon_pwd"
                android:layout_marginTop="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_login_login"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/login_loginButton"
                android:text="@string/login"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/blue0"
                android:layout_marginTop="68dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="loginOnClick"
                android:background="@drawable/btn_login_login"
                android:layout_gravity="center_horizontal" />

            <Button
                android:id="@+id/login_registerButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loginTip"
                android:layout_marginTop="12dp"
                android:clickable="true"
                android:onClick="loginOnClick"
                android:textColor="@drawable/text_login_register"
                android:background="@drawable/btn_login_register"
                android:textSize="15dp"
                android:paddingBottom="30dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>